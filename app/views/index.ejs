<%- include('partials/header') %>
<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Profile Pic</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Contact</th>
                <th scope="col">Bio</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(function (user) { %>
                <tr>
                    <td><img src="<%= user.profilePicURL || '' %>" alt="profile pic"></td>
                    <td><%= user.name || "" %></td>
                    <td><%= user.email || "" %></td>
                    <td><%= user.phone || "" %></td>
                    <td><%= user.bio || "" %></td>
                
                </tr>
            <% }) %>
        </tbody>
    </table>

    <p class="mt-5">Go to your profile</p>
    <a href="/user/profile"><button type="submit" class="btn btn-primary col-3">Profile</button></a>

    <p class="mt-5">Logout</p>
    <a href="/logout"><button type="submit" class="btn btn-primary col-3">Logout</button></a>
</div>
<%- include('partials/footer') %>