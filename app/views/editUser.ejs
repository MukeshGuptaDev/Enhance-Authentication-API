<%- include('partials/header') %>
<div class="container">
    <form action="/user/<%= userId%>" method="POST">
        <h1>Edit User Data</h1>

        <div class="form-group">
            <label for="name" class="form-label  mt-3">Name</label>
            <input type="text" class="form-control form-control-lg" id="name" name="name"
                value="<%= user.name || ''%>">
        </div>
        <div class="form-group">
            <label for="phone" class="form-label  mt-3">Phone</label>
            <input type="text" class="form-control form-control-lg" id="phone" name="phone"
                value="<%= user.phone || ''%>">
        </div>
        <div class="form-group">
            <label for="email" class="form-label  mt-3">Email</label>
            <input type="email" class="form-control form-control-lg" id="email" name="email"
                value="<%= user.email%>">
        </div>
        <div class="form-group">
            <label for="password" class="form-label  mt-3">Password</label>
            <input type="password" class="form-control form-control-lg" id="password" name="password"
                value="">
        </div>
        <div class="form-group">
            <label for="bio" class="form-label  mt-3">Bio</label>
            <input type="bio" class="form-control form-control-lg" id="bio" name="bio"
                value="<%= user.bio || ''%>">
        </div>

        <div class="form-group">
            <label for="profilePicURL" class="form-label mt-3">Profile Pic URL</label>
            <input type="text" class="form-control form-control-lg" id="profilePicURL" name="profilePicURL"
                value="<%= user.profilePicURL || ''%>">
        </div>

        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="privateUser" name="privateUser" <%= user.privateUser ? "checked" : "" %>>
            <label class="form-check-label" for="privateUser">
                private
            </label>
        </div>

        <button type="submit" class="btn btn-primary my-5 col-3">Submit</button>
    </form>
</div>
<%- include('partials/footer') %>