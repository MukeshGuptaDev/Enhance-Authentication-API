<%- include('partials/header') %>
<div class="container">
    <h1>Login</h1>
    <form action="/login" method="POST">
        <div class="form-group">
            <!-- <label for="email" class="col-2 col-form-label">Email</label> -->
            <input type="email" class="form-control form-control-lg mt-5" id="email" name="email"
                placeholder="Please enter email...">
        </div>
        <div class="form-group">
            <!-- <label for="password" class="col-2 col-form-label">Password</label> -->
            <input type="password" class="form-control form-control-lg mt-5" id="password" name="password"
                placeholder="Please enter password...">
        </div>
    
        <button type="submit" class="btn btn-primary my-5 col-3">Login</button>
    </form>

    <p class="my-2">Login with Google Account</p>
    <a href="/auth/google"><button type="submit" class="btn btn-primary col-3">Google</button></a>

    <p class="my-2">Didn't have an account ?</p>
    <a href="/register"><button type="submit" class="btn btn-primary col-3">Sign Up</button></a>
</div>
<%- include('partials/footer') %>