<%- include('partials/header') %>
<div class="container">
    <form action="/register" method="POST">
        <h1>Register</h1>

        <div class="form-group">
            <label for="name" class="form-label mt-2">Name</label>
            <input type="text" class="form-control form-control-lg" id="name" name="name" placeholder="Please enter name...">
        </div>
        <div class="form-group">
            <label for="phone" class="form-label mt-3">Phone</label>
            <input type="text" class="form-control form-control-lg" id="phone" name="phone" placeholder="Please enter mobile number...">
        </div>
        <div class="form-group">
            <label for="email" class="form-label mt-3">Email</label>
            <input type="email" class="form-control form-control-lg" id="email" name="email"
                placeholder="Please enter email address..." required>
        </div>
        <div class="form-group">
            <label for="password" class="form-label mt-3">Password</label>
            <input type="password" class="form-control form-control-lg" id="password" name="password"
                placeholder="Please enter password..." required>
        </div>
        <div class="form-group">
            <label for="confirmPassword" class="form-label mt-3">Confirm Password</label>
            <input type="text" class="form-control form-control-lg" id="confirmPassword" name="confirmPassword"
                placeholder="Please confirm password..." required>
        </div>
        <div class="form-group">
            <label for="bio" class="form-label mt-3">Bio</label>
            <input type="text" class="form-control form-control-lg" id="bio" name="bio" placeholder="Please enter bio...">
        </div>
        <div class="form-group">
            <label for="profilePicURL" class="form-label mt-3">Profile Pic URL</label>
            <input type="text" class="form-control form-control-lg" id="profilePicURL" name="profilePicURL" placeholder="Please enter profile pic url...">
        </div>

        <button type="submit" class="btn btn-primary my-2 col-3">Sign Up</button>

    </form>

    <p>Already have an account ?</p>
    <a href="/login"><button type="submit" class="btn btn-primary col-3">Login</button></a>
</div>
<%- include('partials/footer') %>